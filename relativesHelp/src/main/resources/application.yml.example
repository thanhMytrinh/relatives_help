spring:
  application:
    name: relativesHelp

  # MySQL Database Configuration
  datasource:
    url: jdbc:mysql://localhost:3307/relatives_help?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
    username: YOUR_DB_USERNAME
    password: YOUR_DB_PASSWORD
    driver-class-name: com.mysql.cj.jdbc.Driver

  # Flyway Migration Configuration
  flyway:
    enabled: false

  # JPA Configuration
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        format_sql: true

  # Data stores
  data:
    mongodb:
      uri: mongodb://localhost:27017/relatives_help
      database: relatives_help
    redis:
      host: localhost
      port: 6379
      timeout: 2000ms

  # Elasticsearch Configuration
  elasticsearch:
    uris: http://localhost:9200
    connection-timeout: 5s
    socket-timeout: 60s

  # Kafka Configuration
  kafka:
    bootstrap-servers: localhost:9092
    producer:
      key-serializer: org.apache.kafka.common.serialization.StringSerializer
      value-serializer: org.springframework.kafka.support.serializer.JsonSerializer
      acks: all
      retries: 3
      properties:
        max.in.flight.requests.per.connection: 1
        enable.idempotence: true
    consumer:
      group-id: relatives-help-group
      key-deserializer: org.apache.kafka.common.serialization.StringDeserializer
      value-deserializer: org.springframework.kafka.support.serializer.JsonDeserializer
      properties:
        spring.json.trusted.packages: "*"
        spring.json.type.mapping: "*"
      auto-offset-reset: earliest
      enable-auto-commit: false

  # GraphQL Configuration
  graphql:
    graphiql:
      enabled: true
      path: /graphiql
    schema:
      printer:
        enabled: true
    path: /graphql

# JWT Configuration
jwt:
  secret: YOUR_JWT_SECRET_KEY_SHOULD_BE_AT_LEAST_256_BITS_LONG_FOR_HS256_ALGORITHM
  expiration: 86400000 # 24 hours in milliseconds

# AWS S3 Configuration (Optional)
aws:
  s3:
    bucket-name: ${AWS_S3_BUCKET_NAME:family-tree-media}
    region: ${AWS_REGION:ap-southeast-1}
    access-key: ${AWS_ACCESS_KEY:}
    secret-key: ${AWS_SECRET_KEY:}

# MinIO Configuration
minio:
  endpoint: ${MINIO_ENDPOINT:http://localhost:9000}
  access-key: ${MINIO_ACCESS_KEY:YOUR_MINIO_ACCESS_KEY}
  secret-key: ${MINIO_SECRET_KEY:YOUR_MINIO_SECRET_KEY}
  bucket-name: ${MINIO_BUCKET_NAME:relativeshelp}
  secure: false

# Server Configuration
server:
  port: 8080

# Logging
logging:
  level:
    root: INFO
    com.relativesHelp: DEBUG
    org.springframework.kafka: INFO

# Cloudinary Configuration
cloudinary:
  cloud-name: YOUR_CLOUDINARY_CLOUD_NAME
  api-key: YOUR_CLOUDINARY_API_KEY
  api-secret: YOUR_CLOUDINARY_API_SECRET

